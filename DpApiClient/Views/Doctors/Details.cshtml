@model DpApiClient.Data.Doctor

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Doctor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Facilities:
        </dt>
        <dd>
            <ul>
                @foreach (var facility in Model.DoctorFacilities.Select(df => df.Facility))
                {
                    <li>
                        @Html.RouteLink(facility.Name, routeValues: new { controller = "Facilities", action = "Details", id = facility.Id })
                    </li>
                }
            </ul>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Specializations)
        </dt>

        <dd>
            @String.Join(", ", Model.Specializations.Select(s => s.Name))
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
