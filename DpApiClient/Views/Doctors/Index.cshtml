@model IEnumerable<DpApiClient.Data.Doctor>

@{
    ViewBag.Title = "Doctors";
}

<h2>Doctors</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>Facilities</th>
        <th>Specializations</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>@String.Join(", ", item.DoctorFacilities.Select(f => f.Facility.Name))</td>
        <td>@String.Join(", ", item.Specializations.Select(s => s.Name))</td>
    </tr>
}

</table>
